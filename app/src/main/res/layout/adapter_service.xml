<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginBottom="15sp"
    android:background="@drawable/blanco_square_style"
    android:padding="10sp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <LinearLayout
           android:id="@+id/layuotdata"
           android:layout_width="250sp"
           android:layout_height="wrap_content"
           android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/text_nombre"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center|left"
                 android:textSize="16sp"
                 android:textColor="@color/colorNegro"
                 android:text=""
                 android:textStyle="bold"
                 android:gravity="center|left"
                 android:layout_marginLeft="2sp"
                 android:layout_weight="4"
                 />

             <TextView
                 android:id="@+id/text_fecha"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center|left"
                 android:textSize="16sp"
                 android:textColor="@color/colorNegro"
                 android:text=""
                 android:gravity="center|right"
                 android:layout_marginLeft="2sp"
                 android:layout_weight="6"
                 />
         </LinearLayout>


           <TextView
               android:id="@+id/text_dir"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center|left"
               android:textSize="14sp"
               android:textColor="@color/colorNegro"
               android:text=""
               android:gravity="center|left"
               android:layout_marginLeft="2sp"
               />
       </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="right"
          android:gravity="center|right">

          <ImageView
              android:id="@+id/image_fav"
              android:layout_width="18sp"
              android:layout_height="15sp"
              android:background="@drawable/start"
              android:layout_gravity="right" />

      </LinearLayout>



   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnaceptservice"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:text="Aceptar"
            android:textSize="12sp"
            android:textColor="@color/colorBlanco"
            android:background="@drawable/fondo_post_border_style"
            android:layout_gravity="right"
            android:paddingRight="1sp"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorGrisClaro"
        android:padding="10dp"/>

</LinearLayout>